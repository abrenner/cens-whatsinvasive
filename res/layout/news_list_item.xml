<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/news_list_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="115dp" android:layout_width="fill_parent"
	android:paddingTop="5dp" android:paddingBottom="5dp">
	<TextView android:id="@+id/news_title" style="@style/NewsTitle"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="News title" android:layout_marginBottom="4dp"/>
	<TextView android:id="@+id/news_content" style="@style/NewsContent" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="News content" android:layout_marginBottom="4dp"
		android:ellipsize="end" android:maxLines="2"
		android:gravity="left|center_vertical" android:layout_weight="1"/>
	<LinearLayout android:orientation="horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<TextView android:id="@+id/news_author" style="@style/NewsMeta"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="News source" android:layout_weight="1" android:gravity="left"/>
		<TextView android:id="@+id/news_date"  style="@style/NewsMeta"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="News date" android:layout_weight="1" android:gravity="right"/>
	</LinearLayout>
</LinearLayout>