<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:padding="10px">
	<TextView android:text="@string/tag_name" android:id="@+id/tag_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:textAppearance="?android:attr/textAppearanceLarge"/>
	<TextView android:layout_below="@+id/tag_name" android:id="@+id/tag_time"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/tag_tagged_at"/>
	<TextView android:layout_below="@+id/tag_time" android:id="@+id/tag_not_uploaded"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:text="@string/tag_not_yet" android:textAppearance="?android:attr/textAppearanceMedium"/>
	<TextView android:layout_below="@+id/tag_not_uploaded" android:id="@+id/tag_location"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:text="@string/tag_location" android:textAppearance="?android:attr/textAppearanceMedium" 
		android:layout_marginBottom="20px"/>
	<ImageView android:id="@+id/tag_image"
		android:layout_below="@+id/tag_location" android:scaleType="fitCenter" 
		android:layout_above="@+id/tag_note" android:layout_width="fill_parent" 
		android:layout_centerHorizontal="true" android:layout_height="wrap_content" 
		android:layout_centerVertical="true"/>
	<TextView android:id="@+id/tag_note" android:layout_alignParentBottom="true" 
		android:layout_width="fill_parent" android:layout_height="80px" 
		android:text="@string/tag_note" android:textAppearance="?android:attr/textAppearanceMedium" 
		android:layout_marginTop="5px"/>
</RelativeLayout>
