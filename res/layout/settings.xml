<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/green" android:padding="10px"
	android:gravity="center_horizontal">
	<ImageView android:id="@+id/ImageView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/logo"></ImageView>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:padding="10px" android:layout_below="@+id/ImageView01"
		android:layout_centerHorizontal="true">
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="20px"
			android:text="@string/settings_enable" android:textAppearance="?android:attr/textAppearanceMedium"
			android:paddingTop="5px" android:layout_marginRight="10px"></TextView>
		<ToggleButton android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/TextView01" android:layout_height="wrap_content"
			android:id="@+id/ToggleButtonUpload"></ToggleButton>

		<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
			android:layout_below="@+id/TextView01" android:layout_height="wrap_content"
			android:layout_marginBottom="20px" android:text="@string/settings_auto"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:paddingTop="5px" android:layout_marginTop="10px"></TextView>
		<ToggleButton android:layout_below="@+id/TextView01"
			android:layout_toRightOf="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/ToggleButtonLocation" android:layout_marginTop="10px"></ToggleButton>

		<TextView android:id="@+id/TextView04" android:layout_width="wrap_content"
			android:layout_below="@+id/TextView02" android:layout_height="wrap_content"
			android:layout_marginBottom="20px" android:text="@string/settings_select"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="5px" android:paddingTop="5px"></TextView>
		<Button android:text="@string/settings_show" android:id="@+id/ButtonParks"
			android:layout_toRightOf="@+id/TextView01" android:layout_below="@+id/TextView02"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="5px"></Button>

		<TextView android:id="@+id/TextView03" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20px" android:text="@string/login_login_button"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="40px" android:layout_below="@+id/TextView04" android:paddingTop="25px"></TextView>
		<Button android:text="@string/login_reset_button" android:id="@+id/ButtonLogin"
			android:layout_toRightOf="@+id/TextView01" android:layout_below="@+id/TextView04"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60px"></Button><TextView android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/TextView04" android:textAppearance="?android:attr/textAppearanceMedium" android:width="125px" android:layout_marginTop="10px" android:text="@string/settings_invasive_list"></TextView>
	
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/ButtonParks" android:layout_toRightOf="@+id/TextView04" android:layout_alignLeft="@+id/ButtonParks" android:text="@string/settings_refresh" android:layout_marginTop="7px" android:id="@+id/TagRefreshButton"></Button>
</RelativeLayout>
</RelativeLayout>
